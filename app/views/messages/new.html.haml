%h1= t('messages.message') 
%br
.panel.panel-default
  .panel-body
    =render partial: 'classifieds/show', locals: { classified: @classified }


= simple_form_for [@classified, @message]  do |f|
  = f.input :text, required: true, label: false, placeholder: "..."
  = f.submit t('messages.send'), class: 'btn btn-primary'
